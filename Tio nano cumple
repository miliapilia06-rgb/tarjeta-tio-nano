  <script>
    function showMessage() {
      const msg = document.getElementById('message');
      msg.style.display = 'block';
      createBalloons();
      createSparkles();
      createHorses();
    }

    function createBalloons() {
      for (let i = 0; i < 18; i++) {
        const balloon = document.createElement('div');
        balloon.className = 'balloon';
        const size = Math.random() * 20 + 30;
        balloon.style.width = size + 'px';
        balloon.style.height = size * 1.3 + 'px';
        balloon.style.left = Math.random() * 100 + 'vw';
        balloon.style.background = randomColor();
        balloon.style.animationDuration = (Math.random() * 3 + 4) + 's';
        document.body.appendChild(balloon);

        setTimeout(() => {
          balloon.remove();
        }, 7000);
      }
    }

    function createSparkles() {
      const emojis = ['ğŸ—', 'ğŸŸ', 'ğŸ‰', 'ğŸ’š', 'ğŸ’™'];
      for (let i = 0; i < 12; i++) {
        const sparkle = document.createElement('div');
        sparkle.className = 'sparkle';
        sparkle.innerText = emojis[Math.floor(Math.random() * emojis.length)];
        sparkle.style.left = Math.random() * 80 + 10 + 'vw';
        sparkle.style.top = Math.random() * 60 + 20 + 'vh';
        document.body.appendChild(sparkle);

        setTimeout(() => sparkle.remove(), 2000);
      }
    }

    function createHorses() {
      for (let i = 0; i < 8; i++) {
        const horse = document.createElement('div');
        horse.className = 'horse';
        horse.innerText = 'ğŸ';
        horse.style.top = Math.random() * 60 + 30 + 'vh';
        horse.style.animationDuration = (Math.random() * 3 + 4) + 's';
        document.body.appendChild(horse);

        setTimeout(() => horse.remove(), 7000);
      }
    }

    function randomColor() {
      const colors = ['#3a86ff', '#2ec4b6', '#4cc9f0', '#95d5b2'];
      return colors[Math.floor(Math.random() * colors.length)];
    }
  </script>
